{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    // Checks
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    // Output
    "outDir": "./src/dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false
  },
  "include": ["src"],
  "exclude": ["src/examples", "src/dist"]
}
